<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="exercise_html_purifier.class">HTMLPurifier</parameter>
        <parameter key="exercise_html_purifier.config.class">HTMLPurifier_Config</parameter>
        <parameter key="exercise_html_purifier.cache_warmer.serializer.class">Exercise\HTMLPurifierBundle\CacheWarmer\SerializerCacheWarmer</parameter>
        <parameter key="exercise_html_purifier.twig_extension.class">Exercise\HTMLPurifierBundle\Twig\HTMLPurifierExtension</parameter>
        <parameter key="exercise_html_purifier.text_type.class">Exercise\HTMLPurifierBundle\Form\Type\PurifiedTextType</parameter>
        <parameter key="exercise_html_purifier.textarea_type.class">Exercise\HTMLPurifierBundle\Form\Type\PurifiedTextAreaType</parameter>
        <parameter key="exercise_html_purifier.cache_warmer.serializer.paths" type="collection" />
    </parameters>

    <services>
        <service id="exercise_html_purifier.cache_warmer.serializer" class="%exercise_html_purifier.cache_warmer.serializer.class%">
            <argument>%exercise_html_purifier.cache_warmer.serializer.paths%</argument>
            <tag name="kernel.cache_warmer" />
        </service>

        <service id="exercise_html_purifier.form.transformer.html_purifier" class="Exercise\HTMLPurifierBundle\Form\HTMLPurifierTransformer">
            <argument type="service" id="exercise_html_purifier.default" />
        </service>

        <service id="exercise_html_purifier.form.type.purified_text" class="%exercise_html_purifier.text_type.class%">
            <argument type="service" id="exercise_html_purifier.form.transformer.html_purifier" />
            <tag name="form.type" alias="purified_text" />
        </service>

        <service id="exercise_html_purifier.form.type.purified_textarea" class="%exercise_html_purifier.textarea_type.class%">
            <argument type="service" id="exercise_html_purifier.form.transformer.html_purifier" />
            <tag name="form.type" alias="purified_textarea" />
        </service>
    </services>
</container>
